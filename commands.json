{
    "commands": [
        {
            "command": "sudo systemctl enable redis-server",
            "input": "",
            "interactive": false,
            "description": "enable Redis" 
        },
        {
            "command": "sudo systemctl start redis-server",
            "input": "",
            "interactive": false,
            "description": "start Redis" 
        },
        {
            "command": "sudo raspi-config nonint do_boot_behaviour B2",
            "input": "",
            "interactive": false,
            "description": "disable login screen and GUI" 
        },
        {
            "command": "bash ./setup/scripts/setup_dac.sh",
            "input": "",
            "interactive": false,
            "timeout": 120,
            "description": "script for setting up the DAC that has been connected to the raspberry pi"
        },
        {
            "command": "bash ./setup/scripts/setup_bluetooth.sh",
            "input": "",
            "interactive": false,
            "timeout": 360,
            "description": "script for setting up the bluetooth on raspberry pi"
        },
        {
            "command": "echo \\'The setup has ended. You can now restart the Raspberry Pi\\'",
            "input": "",
            "interactive": false,
            "description": ""
        }
    ],
    "environment": {
        "PATH": "/usr/local/bin:/usr/bin:/bin"
    }
}
